scrp 2 14 50201 10

	inst

	accg 0

	aero 3

	attr 199

	anim [0 1 2 3 2 1 255]

	rnge 500

*Speed

	setv ov06 2

*Ov07 = Target, Always

	seta ov07 null

	tick rand 10 25

endm



scrp 2 14 50201 9



	inst

	doif ov07 eq null

		star 1 24 50200

		doif targ ne null and targ ne ownr

			doif ov00 eq 0

				seta mv07 targ

				targ ownr

			endi

		endi

	else

		gsub follow

	endi



	slow

	targ ownr



	doif velx gt 0

		mira 0

	else

		mira 1

	endi

	stop



	subr follow

		inst

		targ ov07

		doif targ ne null

			setv va00 posx

			setv va01 posy

			targ ownr

			doif va00 gt posx

				addv velx ov06

			elif va00 lt posx

				subv velx ov06

			endi

			doif va01 gt posy

				addv vely ov06

			elif va01 lt posy

				subv vely ov06

			endi

		endi

		targ ownr

		doif touc ownr ov07 eq 1

			targ ov07

			setv ov00 1

			setv va00 posl

			setv va01 post

			new: simp 2 17 50200 "moe_C2toDS_hive" 25 2 2000

			mvsf va00 va01

			kill ownr

		endi



	retn

endm



