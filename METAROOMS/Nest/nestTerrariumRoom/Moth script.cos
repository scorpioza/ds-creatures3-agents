* Moth script

scrp 2 13 60000 9

	doif rtyp room ownr eq 8 or rtyp room ownr eq 9

		accg 0

		loop

			setv vely -20

			setv velx rand 2 -2

			wait 20

			addv va00 1

		untl rtyp room ownr ne 8 and rtyp room ownr ne 9 or va00 gt 4

		doif va00 gt 4

			kill ownr

		endi

		stop

	endi



	addv ov01 1



	gsub moverandom



	doif ov01 gt rand 1200 1600

		gsub die

	endi



	subr die

		accg 3

		wait 20

		doif fall eq 0

			wait 20

			setv va00 posx

			setv va01 posy

			new: simp 2 13 60001 "lc_c1_moth" 24 0 rand 1000 2500

			mvsf va00 va01

			kill ownr

		endi

	retn



	subr moverandom

		setv va00 rand 0 1



		doif obst _up_ le 10

			setv vely rand 1 3

		elif obst down le 10

			setv vely rand -1 -3

		else

			setv vely rand 3 -3

		endi



		reps rand 2 4

			doif va00 eq 0 or obst left le 10

				frat 2

				anim [2 3 255]

				setv velx rand 1 3

				wait rand 5 10

			elif va00 eq 1 or obst rght le 10

				frat 2

				anim [0 1 255]

				setv velx rand -1 -3

				wait rand 5 10

			endi



		repe

	retn



endm



