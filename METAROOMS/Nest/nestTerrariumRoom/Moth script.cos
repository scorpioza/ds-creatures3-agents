* Mothworm script

scrp 2 13 60001 9

	doif carr ne null

		stop

	endi



	doif rtyp room ownr eq 8 or rtyp room ownr eq 9

		kill ownr

	endi



* Age

	subv ov01 1



* Move around

	inst

	gsub daytime

	slow





	subr cocoon

		setv va00 posl

		setv va01 post

		addv va10 10

		new: simp 2 18 20000 "lc_c1_moth" 5 24 va10

		mvsf va00 va01

		kill ownr

	retn



	subr daytime

		doif ov07 eq null

			star 2 4 0

			doif targ ne null

				seta mv07 targ

			else

				targ ownr

				gsub moverandom

			endi

		endi



		targ ownr



		inst

		doif ov07 ne null

			setv va00 posx

			setv va01 posy

			inst

			targ ov07

			setv va03 tran va00 va01

			slow

			targ ownr

			doif va03 eq 1

				gsub follow

			else

				doif pose le 6

					setv va04 0

				else

					setv va04 1

				endi

				gsub climb

			endi



		else

			accg 4



		endi

	retn





*The Follow Subroutine here only does X, allowing the caterpillar to crawl to plants

	subr follow

		inst

		setv ov06 4

		targ ov07

		doif targ eq null

			stop

		endi

		setv va00 posx

		slow

		targ ownr



		doif posx gt va00

			frat 2

			anim [0 1 2 3]

			over

			subv velx ov06

			addv vely -4

			frat 2

			anim [4 5 6 ]

			over

		else

			frat 2

			anim [6 7 8 9]

			over

			addv velx ov06

			addv vely -4

			frat 2

			anim [10 11 6]

			over

		endi



	retn



	subr climb

		inst

		pose 12

		mvsf posl post

		inst

		targ ov07

		doif targ eq null

			stop

		endi

		setv va02 post

		setv va10 plne

		slow

		addv va02 25

		targ ownr



		lock

		loop

			inst

			setv va00 posx

			setv va01 posy

			targ ov07

			doif targ eq null

				stop

			endi

			setv va03 tran va00 va01

			targ ownr

			doif va04 eq 0



				pose 12

				mvsf posl post

				anim [12 13 14 15]

				over

				setv va00 post

				subv va00 4

				mvsf posl va00

				anim [16 17]

				over

			else

				pose 18

				mvsf posl post

				anim [18 19 20 21]

				over

				setv va00 post

				subv va00 4

				mvsf posl va00

				anim [22 23]

				over

			endi

			over

			wait tick

			slow

		untl post le va02 or va03 eq 1 or obst _up_ le 10

		doif post le va02 or va03 eq 1 and ov01 le 50

			gsub cocoon

		endi

		unlk

	retn



	subr moverandom

		dbg: outs "cave worm moving randomly up/down"
		setv va00 rand 0 1

		reps rand 2 5

			doif va00 eq 0

				anim [12 13 14 15]

				over

				setv va00 post

				subv va00 4

				mvsf posl va00

				anim [16 17]

				over

			else

				anim [18 19 20 21]

				over

				setv va00 post

				subv va00 4

				mvsf posl va00

				anim [22 23]

				over

			endi

		repe

	retn

endm



